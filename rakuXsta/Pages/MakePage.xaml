<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="rakuXsta.Pages.MakePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="カード作成"
                   FontSize= "30"/>
            <Label Text="カード名"/>
            <Entry x:Name="card_name"
                   Placeholder=""/>
            <Label Text="スタンプイメージ"/>
            <Entry x:Name="card_img"/>
            <Label Text="カード詳細"/>
            <Editor x:Name="card_info"
                    Placeholder=""
                    HeightRequest="200"/>

            <Button Clicked="PostCreateCardData"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="EndAndExpand"
                    HeightRequest="60"
                    BorderWidth="60"
                    BackgroundColor="#ffd900"
                    TextColor="Black"
                    Text="完了"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
